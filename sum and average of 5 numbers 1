#include <stdio.h>
int main() {
    int num[5], i, sum;
    float average;
    sum = 0;
    for(i = 0; i < 5; i++) {
        scanf("%d", &num[i]);
        sum += num[i];
    }
    average = sum / 5.0;
    printf("Sum of the 5 number is : %d\n", sum);
    printf("Average of the 5 number is : %.1f\n\n", average);
    return 0;
}


